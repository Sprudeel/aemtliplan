// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  role      String
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Session {
  id        String   @id
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
  @@index([expiresAt])
}

model Group {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  rotationIndex Int      @unique // position in the single rotation ring (0..N-1)
  members       Member[]
  createdAt     DateTime @default(now())

  assignments GroupJob[]
}

model Member {
  id      Int    @id @default(autoincrement())
  name    String
  groupId Int
  group   Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, name])
}

model Job {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  icon            String?
  rotationPointer Int      @default(0) // jobâ€™s position within the ring
  description     String?
  createdAt       DateTime @default(now())

  current    GroupJob?
  placements JobPlacement[]
}

model GroupJob {
  id        Int      @id @default(autoincrement())
  groupId   Int
  jobId     Int      @unique
  createdAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  job   Job   @relation(fields: [jobId], references: [id], onDelete: Cascade)

  // prevent duplicate pairings
  @@unique([groupId, jobId])
}

model JobPlacement {
  id      Int @id @default(autoincrement())
  jobId   Int
  row     Int @default(1)
  col     Int @default(1)
  rowSpan Int @default(1)
  colSpan Int @default(1)

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId])
}
